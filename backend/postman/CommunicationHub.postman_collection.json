						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": \"user-id-here\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/teams/{{teamId}}/members",
							"host": [
								"{{baseUrl}}"
