						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Development Team\",\n  \"description\": \"Core development team\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/teams",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"teams"
							]
