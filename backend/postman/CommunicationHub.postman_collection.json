							{
								"key": "x-user-email",
								"value": "{{userEmail}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"Hello team! This is a test message.\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/teams/{{teamId}}/messages",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"teams",
								"{{teamId}}",
								"messages"
							]
						},
						"description": "Send a message to a team. Returns 403 if user is not a member of the team."
					},
					"response": []
